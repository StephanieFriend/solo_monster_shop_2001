<h1 align= "center">Update Profile Information</h1>
<center>
  <%= form_for @user, :url => '/user/profile', method: :patch do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name, id:"name"%>

    <%= f.label :user_address %>
    <%= f.text_field :street_address, id:"street_address" %>

    <%= f.label :city %>
    <%= f.text_field :city, id:"city" %>

    <%= f.label :state %>
    <%= f.text_field :state, id:"state" %>

    <%= f.label :zip_code %>
    <%= f.text_field :zip_code, id:"zip_code" %>

    <%= f.label :email_address %>
    <%= f.text_field :email_address, id:"email_address" %>

    <%= submit_tag 'Submit' %>
  <% end %>
</center>
